<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Find Cocktails</title>
    <link href="/css/style2.css" rel="stylesheet">
</head>

<body>
    <%-include("partials/nav.ejs")%>

    <div class="welcome-box">
        <h1>Find A Cocktail</h1>
        <div class="welcome-content">
            <form id="searchForm" onsubmit="searchCocktail(event)">
                <label for="search">Search for a cocktail:</label>
                <input type="text" id="search" name="search" placeholder="Enter a cocktail" list="cocktail-list">
                <datalist id="cocktail-list">
                    <% if (drinks && drinks.length > 0) { %>
                        <% for (let i = 0; i < drinks.length; i++) { %>
                            <option value="<%= drinks[i] %>"><%= drinks[i] %></option>
                        <% } %>
                    <% } %>
                </datalist>
                <button type="submit">Search</button>
            </form>
        </div>
    </div>

    <!-- Cocktail Details Modal -->
    <div id="cocktailModal" class="modal">
        <div class="modal-content">
            <span class="close" onclick="document.getElementById('cocktailModal').style.display='none'">&times;</span>
            <div id="cocktailDetails">
                <!-- Content will be populated by JavaScript -->
            </div>
        </div>
    </div>

    <script src="/js/find.js"></script>
</body>

</html>